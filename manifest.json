{
  "manifest_version": 2,
  "name": "YouTube Plus Response",
  "version": "0.1",
  "description": "Helps you to post a + response on YouTube. As sugested by Hank Green https://www.youtube.com/watch?v=0dtzfu9RpTs",
	
  "applications": {
	    "gecko": {
	      "id": "youtube-plus-response@firefueled.com",
	      "strict_min_version": "45.0"
	    }
	},

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": [
    "images/*.png"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/add_pluses.js"],
      "css": ["content_scripts/add_pluses.css"]
    }
  ],

  "browser_action": {
    "default_title": "DoIt"
  }
}